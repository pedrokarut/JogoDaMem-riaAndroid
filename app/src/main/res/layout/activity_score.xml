<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InformacoesTitulo"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InformacoesDoJogo"
        android:id="@+id/tvInformacoesJogo"
        android:textSize="22dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DesenvolvidoPor"
        android:textStyle="bold"
        android:textSize="28dp"
        android:id="@+id/textView5"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tvInformacoesJogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pedro"
        android:id="@+id/tvPedro"
        android:layout_alignTop="@+id/ivPedro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkPedro"
        android:id="@+id/tvlinkPedro"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/ivPedro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Paulo"
        android:id="@+id/tvPaulo"
        android:layout_alignTop="@+id/ivPaulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkPaulo"
        android:textSize="10dp"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/ivPaulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Gilmar"
        android:id="@+id/tvGilmar"
        android:layout_alignTop="@+id/imGilmar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="@string/linkGilmar"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/imGilmar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPedro"
        android:src="@drawable/pedro"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPaulo"
        android:src="@drawable/paulo"
        android:layout_above="@+id/imGilmar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gilmar"
        android:id="@+id/imGilmar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvInformacoesJogo"
        android:layout_alignEnd="@+id/tvInformacoesJogo" />
</RelativeLayout>
