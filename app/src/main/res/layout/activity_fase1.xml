<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedro.ifsp.br.trabalhobimestral.Fase1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DescricaoFase1"
        android:id="@+id/tvDescricaoFase1"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCat1"
        android:src="@drawable/cat"
        android:layout_below="@+id/tvDescricaoFase1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPig1"
        android:src="@drawable/porco"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/ivCat1"
        android:layout_alignRight="@+id/tvDescricaoFase1"
        android:layout_alignEnd="@+id/tvDescricaoFase1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPig2"
        android:src="@drawable/porco"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ivCat1"
        android:layout_alignStart="@+id/ivCat1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCat2"
        android:src="@drawable/cat"
        android:layout_alignTop="@+id/ivPig2"
        android:layout_alignLeft="@+id/ivPig1"
        android:layout_alignStart="@+id/ivPig1" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/carta"
        android:id="@+id/ibCobreGato1"
        android:onClick="clickGato1"
        android:layout_below="@+id/tvDescricaoFase1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:onClick="clickPorco1"
        android:src="@drawable/carta"
        android:id="@+id/ibCobrePorco1"
        android:layout_alignTop="@+id/ibCobreGato1"
        android:layout_alignRight="@+id/tvDescricaoFase1"
        android:layout_alignEnd="@+id/tvDescricaoFase1" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/carta"
        android:id="@+id/ibCobrePorco2"
        android:onClick="clickPorco2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/carta"
        android:id="@+id/ibCobreGato2"
        android:onClick="clickGato2"
        android:layout_alignTop="@+id/ibCobrePorco2"
        android:layout_alignLeft="@+id/ibCobrePorco1"
        android:layout_alignStart="@+id/ibCobrePorco1" />

    <Button
        android:layout_width="300dp"
        android:background="@color/colorPrimary"
        android:onClick="callFase2"
        android:layout_height="60dp"
        android:text="@string/btFase2"
        android:id="@+id/btFase2"
        android:layout_above="@+id/ibCobrePorco2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>
