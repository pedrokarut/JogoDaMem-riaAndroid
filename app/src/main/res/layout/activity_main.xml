<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedro.ifsp.br.trabalhobimestral.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labelTitulo"
        android:id="@+id/tvTitulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btJogar"
        android:id="@+id/btJogar"
        android:height="80dp"
        android:onClick="callFase1"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/tvTitulo"
        android:layout_alignLeft="@+id/tvTitulo"
        android:layout_alignStart="@+id/tvTitulo"
        android:layout_alignRight="@+id/tvTitulo"
        android:layout_alignEnd="@+id/tvTitulo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btInformacoes"
        android:id="@+id/btInformacoes"
        android:height="80dp"
        android:onClick="callInformacoes"
        android:layout_below="@+id/btJogar"
        android:layout_alignLeft="@+id/btJogar"
        android:layout_alignStart="@+id/btJogar"
        android:layout_marginTop="90dp"
        android:layout_alignRight="@+id/btJogar"
        android:layout_alignEnd="@+id/btJogar" />
</RelativeLayout>
