<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedro.ifsp.br.trabalhobimestral.Informacoes">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InformacoesTitulo"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/tvInformcoesTitulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="@string/InformacoesDoJogo"
        android:id="@+id/tvDescricao"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tvInformcoesTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/DesenvolvidoPor"
        android:textSize="21dp"
        android:id="@+id/tvDesenvolvidoPor"
        android:layout_below="@+id/tvDescricao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pedro"
        android:textSize="18dp"
        android:id="@+id/tvPedro"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/tvDesenvolvidoPor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Paulo"
        android:id="@+id/tvPaulo"
        android:textSize="18dp"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/tvPedro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Gilmar"
        android:id="@+id/tvGilmar"
        android:textSize="18dp"
        android:layout_below="@+id/ivPaulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPedro"
        android:src="@drawable/pedro"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvInformcoesTitulo"
        android:layout_toEndOf="@+id/tvInformcoesTitulo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPaulo"
        android:src="@drawable/paulo"
        android:layout_alignTop="@+id/tvPaulo"
        android:layout_alignRight="@+id/ivPedro"
        android:layout_alignEnd="@+id/ivPedro" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivGilmar"
        android:src="@drawable/gilmar"
        android:layout_alignTop="@+id/tvGilmar"
        android:layout_alignRight="@+id/ivPedro"
        android:layout_alignEnd="@+id/ivPedro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkPedro"
        android:id="@+id/tvLinkPedro"
        android:textSize="11dp"
        android:layout_below="@+id/tvPedro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkPaulo"
        android:textSize="10dp"
        android:id="@+id/tvLinkPaulo"
        android:layout_below="@+id/tvPaulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkGilmar"
        android:textSize="11dp"
        android:id="@+id/tvLinkGilmar"
        android:layout_below="@+id/tvGilmar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
