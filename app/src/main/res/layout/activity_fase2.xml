<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedro.ifsp.br.trabalhobimestral.Fase2">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivGato1"
        android:src="@drawable/cat2"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivbird1"
        android:src="@drawable/bird"
        android:layout_alignTop="@+id/ivGato1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLion"
        android:src="@drawable/lion2"
        android:layout_alignTop="@+id/ivbird1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivpig1"
        android:src="@drawable/porco2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ibCobreGato1"
        android:layout_alignLeft="@+id/ibCobrepig1"
        android:layout_alignStart="@+id/ibCobrepig1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivcow1"
        android:src="@drawable/cow2"
        android:layout_alignTop="@+id/ivpig1"
        android:layout_alignLeft="@+id/ivbird1"
        android:layout_alignStart="@+id/ivbird1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivdog1"
        android:src="@drawable/dog2"
        android:layout_alignTop="@+id/ivcow1"
        android:layout_alignRight="@+id/ibCobreLion1"
        android:layout_alignEnd="@+id/ibCobreLion1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivbird2"
        android:src="@drawable/bird"
        android:layout_below="@+id/ivpig1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCat2"
        android:src="@drawable/cat2"
        android:layout_alignBottom="@+id/ivbird2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivlion2"
        android:src="@drawable/lion2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ivCat2"
        android:layout_alignLeft="@+id/ivCat2"
        android:layout_alignStart="@+id/ivCat2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivporco2"
        android:src="@drawable/porco2"
        android:layout_alignTop="@+id/ivCat2"
        android:layout_alignRight="@+id/ivdog1"
        android:layout_alignEnd="@+id/ivdog1"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivdog2"
        android:src="@drawable/dog2"
        android:layout_alignTop="@+id/ivlion2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivcow2"
        android:src="@drawable/cow2"
        android:layout_alignTop="@+id/ivdog2"
        android:layout_alignLeft="@+id/ivporco2"
        android:layout_alignStart="@+id/ivporco2" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:id="@+id/ibCobreGato1"
        android:src="@drawable/carta2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:src="@drawable/carta2"
        android:id="@+id/ibCobrePassaro1"
        android:layout_above="@+id/ivpig1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/ibCobreLion1"
        android:src="@drawable/carta2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ibCobreGato1" />

    <ImageButton
        android:layout_width="90dp"
        android:src="@drawable/carta2"
        android:layout_height="100dp"
        android:id="@+id/ibCobrepig1"
        android:layout_below="@+id/ibCobreGato1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/carta2"
        android:id="@+id/ibCobreCow1"
        android:layout_alignTop="@+id/ibCobrepig1"
        android:layout_alignBottom="@+id/ibCobrepig1"
        android:layout_alignLeft="@+id/ibCobrePassaro1"
        android:layout_alignStart="@+id/ibCobrePassaro1"
        android:layout_alignRight="@+id/ibCobrePassaro1"
        android:layout_alignEnd="@+id/ibCobrePassaro1" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ibCobreDog1"
        android:src="@drawable/carta2"
        android:layout_alignTop="@+id/ibCobreCow1"
        android:layout_alignBottom="@+id/ibCobreCow1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/ibCobreLion1"
        android:layout_alignStart="@+id/ibCobreLion1" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/carta2"
        android:id="@+id/ibCobreBird2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ivlion2" />

    <ImageButton
        android:layout_width="90dp"
        android:src="@drawable/carta2"
        android:layout_height="100dp"
        android:id="@+id/ibCobreGato22"
        android:layout_alignTop="@+id/ibCobreBird2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="110dp"
        android:src="@drawable/carta2"
        android:layout_height="90dp"
        android:id="@+id/ibCobrePorco22"
        android:layout_alignBottom="@+id/ibCobreGato22"
        android:layout_alignLeft="@+id/ibCobreDog1"
        android:layout_alignStart="@+id/ibCobreDog1"
        android:layout_alignTop="@+id/ibCobreGato22" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/carta2"
        android:id="@+id/ibCobreCachorro2"
        android:layout_below="@+id/ibCobreGato22"
        android:layout_alignRight="@+id/ibCobreBird2"
        android:layout_alignEnd="@+id/ibCobreBird2" />

    <ImageButton
        android:layout_width="85dp"
        android:src="@drawable/carta2"
        android:layout_height="95dp"
        android:id="@+id/ibCobreLion2"
        android:layout_alignBottom="@+id/ibCobreCachorro2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/carta2"
        android:id="@+id/ibCobreCow2"
        android:layout_alignBottom="@+id/ibCobreLion2"
        android:layout_alignTop="@+id/ibCobreLion2"
        android:layout_alignLeft="@+id/ibCobrePorco22"
        android:layout_alignStart="@+id/ibCobrePorco22" />


</RelativeLayout>
