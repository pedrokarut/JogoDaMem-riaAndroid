<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pedro.ifsp.br.trabalhobimestral.Fase2">


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Acertos"
            android:textSize="15dp"
            android:id="@+id/tvPontuacao"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvAcertos"
            android:layout_column="1"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/imageButton"
            android:src="@drawable/envelope"
            android:visibility="invisible"
            android:layout_column="0" />

    </TableRow>  <!--linha para ajeitar o layout-->


    <TableRow>
        <FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivbird1"
                android:src="@drawable/bird"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobrePassaro1"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="clickBird1" />
        </FrameLayout>
        <FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivLion"
                android:src="@drawable/lion2"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:id="@+id/ibCobreLion1"
                android:src="@drawable/carta2"
                android:onClick="clickLion1" />
        </FrameLayout>
        <FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivpig1"
                android:src="@drawable/porco2"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobrepig1"
                android:onClick="clickPig1" />
        </FrameLayout>

        <Button
            android:id="@+id/button"
            android:layout_column="3"
            android:visibility="invisible" />
    </TableRow>


    <TableRow>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/carta2"
            android:id="@+id/ibAumentaRow1"
            android:visibility="invisible"
            android:layout_column="3"
            />
    </TableRow>  <!--linha para ajeitar o layout-->


    <TableRow>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivcow1"
                android:src="@drawable/cow2"
                android:layout_gravity="center"
                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobreCow1"
                android:layout_gravity="left|center_vertical"
                android:onClick="clickCow1" />

        </FrameLayout>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivdog1"
                android:src="@drawable/dog2"
                android:layout_gravity="center"
                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:id="@+id/ibCobreDog1"
                android:src="@drawable/carta2"
                android:onClick="clickDog1" />


        </FrameLayout>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivbird2"
                android:src="@drawable/bird"
                android:layout_gravity="center"  />



            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobreBird2"
                android:onClick="clickBird2" />

        </FrameLayout>

    </TableRow>


    <TableRow>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/carta2"
            android:id="@+id/ibAumentaRow2"
            android:visibility="invisible"
            android:layout_column="3"
            />
    </TableRow>   <!--linha para ajeitar o layout-->


    <TableRow>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivlion2"
                android:src="@drawable/lion2"
                android:layout_gravity="center"   />

            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/carta2"
                android:layout_height="95dp"
                android:id="@+id/ibCobreLion2"
                android:onClick="clickLion2" />

        </FrameLayout>
        <FrameLayout>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivporco2"
                android:src="@drawable/porco2"
                android:layout_gravity="center"        />


            <ImageButton
                android:layout_width="80dp"
                android:src="@drawable/carta2"
                android:layout_height="95dp"
                android:id="@+id/ibCobrePorco22"
                android:onClick="clickPig2" />

        </FrameLayout>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivdog2"
                android:src="@drawable/dog2"
                android:layout_gravity="center"
                />



            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobreCachorro2"
                android:onClick="clickDog2" />


        </FrameLayout>
        <FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivcow2"
                android:src="@drawable/cow2"
                android:layout_gravity="center"     />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:src="@drawable/carta2"
                android:id="@+id/ibCobreCow2"
                android:onClick="clickCow2" />


        </FrameLayout>
    </TableRow>

</TableLayout>
